{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@global/*": [
        "global/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "eslint.config.mjs",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}